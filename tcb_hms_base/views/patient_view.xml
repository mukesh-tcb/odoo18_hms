<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Patient View -->
    <record model="ir.ui.view" id="patient_kanban_view">
        <field name="name">patient.kanban</field>
        <field name="model">hms.patient</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="image_128"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="primary_physician_id"/>
                <!-- <field name="parent_id"/> -->
                <!-- <field name="function"/> -->
                <field name="name"/>
                <field name="today_is_birthday"/>
                <!-- <field name="tcb_tag_ids"/> -->
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                            <div class="ribbon tcb-kanban-ribbon ribbon-top-right o_widget" t-if="record.today_is_birthday.raw_value">
                                <span class="bg-success"><i class="fa fa-birthday-cake"/> Birthday</span>
                            </div>
                            <t t-set="placeholder" t-value="'/base/static/img/avatar_grey.png'"/>
                            <div class="o_kanban_image_fill_left d-none d-md-block" t-attf-style="background-image:url('#{kanban_image('hms.patient', 'image_128', record.id.raw_value, placeholder)}')"/>
                            <div class="oe_kanban_details">
                                <strong class="oe_partner_heading"><field name="name"/></strong>
                                <ul>
                                    <li><b>Name:</b> <field name="patient_name"/></li>
                                    <li t-if="record.age.raw_value"><b>Age:</b> <field name="age"/></li>
                                    <li t-if="record.gender.raw_value"><b>Gender:</b> <field name="gender"/></li>
                                    <li t-if="record.primary_physician_id.raw_value"><b>Primary Physician:</b> <field name="primary_physician_id"/></li>
                                </ul>
                                <!-- <span class="oe_kanban_list_many2many">
                                    <field name="tcb_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                </span> -->
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_patient_tree" model="ir.ui.view">
        <field name="name">patient.tree</field>
        <field name="model">hms.patient</field>
        <field name="arch" type="xml">
            <list string="Patient">
                <field name="name"/>
                <field name="patient_name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="phone"/>
                <field name="active" invisible="1"/>
            </list>
        </field>
    </record>

    <record id="view_patient_form" model="ir.ui.view">
        <field name="name">patient.form</field>
        <field name="model">hms.patient</field>
        <field name="arch" type="xml">
            <form string="Patient">
                <header>
                </header>
                <sheet>
                    <!-- <div class="oe_button_box" name="button_box">
                        <button type="object" name="view_invoices" class="oe_stat_button" icon="fa-money" context="{'default_patient_id': active_id}" >
                            This group will applied above
                            groups="account.group_account_invoice"
                            <div class="o_field_widget o_stat_info mr4">
                                <span class="o_stat_text">Inv:</span>
                                <span class="o_stat_text">Due:</span>
                            </div>
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="total_invoiced" widget="monetary" options="{'currency_field': 'currency_id'}"/></span>
                                <span class="o_stat_value"><field name="tcb_amount_due" widget="monetary" options="{'currency_field': 'currency_id'}"/></span>
                            </div>
                        </button>
                        <button class="oe_stat_button" type="object"
                            name="action_view_attachments" icon="fa-files-o">
                            <field string="Documents" name="attach_count" widget="statinfo"/>
                        </button> 
                    </div>-->
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>
                    <field name="today_is_birthday" invisible="1"/>
                    <widget name="web_ribbon" title="Birthday" invisible="not today_is_birthday"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active == True"/>
                    <div class="oe_title">
                        <h1>
                            <!-- <field name="name"/> -->
                            <field name="name_display" />
                        </h1>
                        <div name="options" groups="base.group_user">
                        </div>
                    </div>
                    <group>
                        <group>
                            <field name="name" readonly="1" string="Patient Code"/>
                            <field name="patient_name" default_focus="1" placeholder="Name"  string="Name" required="1"/>
                            <field name="title"/>
                            <field name="gender" required="1"/>
                            <field name = "care_of"/>
                            <field name = "relation"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="date_of_birth"/>
                            <field name="age"/>
                            <field name="primary_physician_id"/>
                            <field name="phone" widget="phone"/>
                            <!-- <button string="Button" name="browse_customer_data" type="object" class="oe_highlight"/> -->
                            <!-- <field name="tcb_tag_ids" options="{'color_field': 'color'}" widget="many2many_tags" string="Tags"/> -->
                        </group>
                    </group>
                    <notebook>
                        <page name="info" string="General Information">
                            <group>
                                <group>
                                    <label for="street" string="Address"/>
                                    <div class="o_address_format">
                            <field name="street" placeholder="Address line 1" class="o_address_street"
                            />
                            <field name="street2" placeholder="Address line 2" class="o_address_street"
                            />
                            <field name="city" placeholder="City" class="o_address_city"
                            />
                            <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}'
                            context="{'country_id': country_id, 'zip': zip}" domain="[('country_id','=','India')]"/>
                            <field name="zip" placeholder="ZIP" class="o_address_zip"
                            />
                            <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'
                            />
                            </div>
                                </group>
                                <group>
                                    <field name="aadhar"/>
                                    <field name="pan" />
                                    <field name="occupation"/>
                                    <field name="religion" />
                                    <!-- <field name="gov_code"/> -->
                                </group>
                            </group>
                            <group> 
                                <group name="basic_details">
                                    <field name="mobile" widget="phone"/>
                                    <field name="email"/>
                                    
                                    
                                </group>
                                <group>
                                    <!-- <field name="property_product_pricelist" groups="product.group_product_pricelist" options="{'no_open':True,'no_create': True}"/> -->
                                    <field name="marital_status"/>
                                    <field name="spouse_name" invisible="marital_status != 'married'"/>
                                    <field name="spouse_edu" invisible="marital_status != 'married'"/>
                                    <field name="spouse_business" invisible="marital_status != 'married'"/>
                                </group>
                            </group>
                            
                        </page>
                        <page name="hospital_info" string="Hospital Info">
                            <group>
                                
                                
                                <group name="basic_medical">
                                    <field name="hospitalize"/>
                                    <field name="blood_group"/>
                                    <!-- <field name="partner_id"/> -->
                                    <!-- <field name="ref_doctor_ids" widget="many2many_tags"/> -->
                <!-- this group will be used later -->
                <!-- groups="tcb_hms.group_patient_registartion_invoicing" -->
                                </group>
                                <group name="death_details">
                                    <field name="date_of_death" force_save="True"/>
                                </group>
                            </group>
                        <!-- this is another pages -->
                        </page>
                        <!-- groups="tcb_hms.group_hms_nurse" -->
                        <page name="patient_payments" string="Patient Payments">
                            <field name="patient_payment_line_ids">
                                <list name="payment_lines" editable="bottom">    
                                    <field name="name"/>
                                    <field name="patient_id"/>
                                    <field name="payment_date"/>
                                    <field name="payment_mode"/>
                                    <field name="payment_amount"/>
                                    <field name="payment_type"/>
                                    <field name="payment_datetime" readonly="0"/>
                                </list>
                            </field>
                        </page>
                        
                    
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_patient_filter" model="ir.ui.view">
        <field name="name">patient.filter</field>
        <field name="model">hms.patient</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <search string="Patient">
                <field name="name" filter_domain="['|', '|', '|', '|', ('name', 'ilike', self), ('gov_code', '=', self), ('patient_name', 'ilike', self), ('email', 'ilike', self),  ('mobile', 'ilike', self)]"/>
                <field name="mobile" filter_domain="[('mobile', 'ilike', self)]"/>
                <field name="gov_code"/>
                <field name="patient_name"/>
                <field name="primary_physician_id"/>
                <field name="active" invisible="1"/>
                <separator/>
                <filter string="Is Male" name="gender" domain="[('gender','=','male')]"/>
                <filter string="Is Famale" name="gender" domain="[('gender','=','female')]"/>
                <separator/>
                <filter string="All" name="all" domain="['|', ('active', '=', False), ('active', '=', True)]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Today's Birthday" name="today_birthday" domain="[('birthday','like',(context_today()).strftime('%%m-%%d'))]"/>
                <newline/>
                <group expand="0" string="Group By...">
                    <filter string="Birthday" name="birthday_groupby" domain="[]" context="{'group_by':'birthday'}"/>
                    <filter string="Blood Group" name="blood_group" domain="[]" context="{'group_by':'blood_group'}"/>
                        <!-- <filter string="Corporate Company" name="corpo_company_id" domain="[]" context="{'group_by':'corpo_company_id'}"/> -->
                </group>
            </search>
        </field>
    </record>

    <record id="action_patient" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <field name="res_model">hms.patient</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="view_patient_filter"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
            <p>
                Click to add a Patient. 
            </p>
        </field>
    </record>


        <menuitem   id="patient_menu"
                    name="Patients"
                    action="action_patient"
                    sequence="9"/>
    
</odoo>